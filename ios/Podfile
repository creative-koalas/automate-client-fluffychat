# 阿里云推送 SDK 源
source 'https://github.com/aliyun/aliyun-specs.git'
# 使用 CDN 方式访问 CocoaPods specs (更快更稳定)
source 'https://cdn.cocoapods.org/'

# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # 阿里云一键登录 SDK
  pod 'ATAuthSDK', :path => 'Runner/Frameworks'

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # ensure all dependencies are using SQLCipher instead of SQLite
      xcconfig_path = config.base_configuration_reference.real_path
      xcconfig = File.read(xcconfig_path)
      new_xcconfig = xcconfig.sub(' -l"sqlite3"', '')
      File.open(xcconfig_path, "w") { |file| file << new_xcconfig }

      config.build_settings['ENABLE_BITCODE'] = 'NO'

      # see https://github.com/flutter-webrtc/flutter-webrtc/issues/1054
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = 'arm64 i386'

      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        # dart: PermissionGroup.microphone
        'PERMISSION_MICROPHONE=1',
      ]

      # 阿里云推送 SDK 需要 -ObjC linker flag
      config.build_settings['OTHER_LDFLAGS'] ||= ['$(inherited)']
      unless config.build_settings['OTHER_LDFLAGS'].include?('-ObjC')
        config.build_settings['OTHER_LDFLAGS'] << '-ObjC'
      end

      # Flutter 3.38+ uses "Flutter" framework; replace legacy "Flutter-ObjC" if present.
      other_ldflags = config.build_settings['OTHER_LDFLAGS']
      case other_ldflags
      when Array
        config.build_settings['OTHER_LDFLAGS'] = other_ldflags.map do |flag|
          flag == 'Flutter-ObjC' ? 'Flutter' : flag
        end
      when String
        config.build_settings['OTHER_LDFLAGS'] = other_ldflags.gsub('Flutter-ObjC', 'Flutter')
      end
    end
  end
  flutter_post_install(installer) if defined?(flutter_post_install)

  # 修复 Flutter-ObjC 引用问题 (Flutter 3.38.x bug)
  # 方案1：修复当前的 Pods 项目
  pbxproj_path = "#{installer.pods_project.path}/project.pbxproj"
  if File.exist?(pbxproj_path)
    text = File.read(pbxproj_path)
    count = text.scan(/Flutter-ObjC/).length
    if count > 0
      new_text = text.gsub(/Flutter-ObjC/, 'Flutter')
      File.write(pbxproj_path, new_text)
      puts "✅ 已自动修复 Flutter-ObjC 引用 (#{count} 处)"
    else
      puts "✅ Flutter-ObjC 无需修复"
    end
  end

  # 方案2：添加 Xcode Build Phase 脚本，在编译前自动修复
  # 这样即使 Flutter 工具链重新生成 Flutter-ObjC 引用，也会被自动修复
  project_path = 'Runner.xcodeproj'
  project = Xcodeproj::Project.open(project_path)

  runner_target = project.targets.find { |target| target.name == 'Runner' }
  if runner_target
    # 检查是否已经存在修复脚本
    existing_phase = runner_target.shell_script_build_phases.find do |phase|
      phase.name == 'Fix Flutter-ObjC'
    end

    unless existing_phase
      # 添加新的 Build Phase 在 "Run Script" (xcode_backend.sh) 之后
      fix_phase = runner_target.new_shell_script_build_phase('Fix Flutter-ObjC')
      fix_phase.shell_script = <<~SCRIPT
        # 自动修复 Flutter 3.38.x 的 Flutter-ObjC bug
        PBXPROJ="${PODS_ROOT}/../Pods/Pods.xcodeproj/project.pbxproj"
        if [ -f "$PBXPROJ" ]; then
          if grep -q "Flutter-ObjC" "$PBXPROJ"; then
            sed -i '' 's/Flutter-ObjC/Flutter/g' "$PBXPROJ"
            echo "✅ Auto-fixed Flutter-ObjC references in build phase"
          fi
        fi
      SCRIPT
      fix_phase.show_env_vars_in_log = '0'

      # 将这个 phase 移动到 "Run Script" 之后
      run_script_phase = runner_target.shell_script_build_phases.find { |phase| phase.name == 'Run Script' }
      if run_script_phase
        runner_target.build_phases.delete(fix_phase)
        run_script_index = runner_target.build_phases.index(run_script_phase)
        runner_target.build_phases.insert(run_script_index + 1, fix_phase)
      end

      project.save
      puts "✅ 已添加自动修复 Build Phase，每次编译前都会自动修复 Flutter-ObjC"
    else
      puts "✅ 自动修复 Build Phase 已存在"
    end
  end
end
